@model Creatives.Models.Creative

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Creative</legend>

        @Html.HiddenFor(model => model.Creativeid)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.About)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.About)
            @Html.ValidationMessageFor(model => model.About)
        </div>
        
            @Html.HiddenFor(model => model.UserId)
        <label>Add Tags creative</label>
        <input id="Tagon" name="Tagon" type="text" value="@Model.Tagon" >
         @Html.ValidationMessageFor(model => model.Tagon)
           


            @Html.HiddenFor(model => model.DateCreate)
            
        
        <ul class="button-group">
            <li> <input class="button"  type="submit" value="Save" /></li>
            <li><a href="~/Creative/Find/@Model.Creativeid" class="button alert  ">Back to Creative</a></li>

        </ul>
        
        
        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
