@model Creatives.Models.Chapter
<style type="text/css">
    textarea.mdd_editor {
        width: initial;
        height: initial;
        resize: none;
        margin: 0;
        padding: 3px;
    }
</style>
<link rel="stylesheet" type="text/css" href="/Scripts/mdd_styles.css" />
<script type="text/javascript" src="/Scripts/jquery-1.8.2.min.js"></script>
<script type="text/javascript" src="/Scripts/MarkdownDeepLib.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("textarea.mdd_editor").MarkdownDeep({
            help_location: "/Scripts/mdd_help.htm",
            ExtraMode: true
        });
    })
</script>
@{int
    a = ViewBag.count;
}
<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

  
    
    
    <div class="editor-field">

        <select id="numb" type="text" name="numb">
            <option type="text" value="0">Number chapter</option>
            @{int i = 0;

              do
              {
                  i++;
                <option type="number" value="@i">@i</option>
                

              }
              while (i < a);}

        </select>

    </div>
    @Html.HiddenFor(model => model.ChapterId)
    @Html.HiddenFor(model => model.NumbChapter)
    @Html.HiddenFor(model => model.CreativeId)
    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>
   

      
    <div class="mdd_toolbar"></div>

    <textarea rows="30" class="mdd_editor" cols="10" id="Body" name="Body">@Model.Body</textarea>
    <div class="mdd_resizer"></div>
    <hr />

    <input type="submit" class="button success radius round" value="Save" />
        
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
